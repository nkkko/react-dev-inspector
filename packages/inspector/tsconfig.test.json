/**
 * for only check types in stories and tests
 */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": true,
  },
  "include": [
    "**/*.d.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "**/*.mock.ts",
    "**/tests",
    "**/mocks",
    "**/.stories",
  ],
}
